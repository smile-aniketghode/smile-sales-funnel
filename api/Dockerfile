# NestJS API Service
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy application code
COPY . .

# Build NestJS app
RUN npm run build

# Expose port
EXPOSE 3001

# Start NestJS in production mode
CMD ["npm", "run", "start:prod"]
