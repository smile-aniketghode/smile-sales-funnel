# SMILe Sales Funnel - Environment Configuration

# ======================
# DEPLOYMENT MODE
# ======================
# For local development: use .env.local
# For AWS deployment: use .env.production

# ======================
# DynamoDB Configuration
# ======================
# For local: DYNAMODB_ENDPOINT=http://localhost:8001
# For AWS: Leave DYNAMODB_ENDPOINT empty
DYNAMODB_ENDPOINT=
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
TABLE_PREFIX=smile-sales-funnel-dev

# ======================
# LLM Configuration
# ======================
# Ollama (local)
OLLAMA_BASE_URL=http://localhost:11434
LLM_MODEL=llama3.2

# OR AWS Bedrock (cloud)
# AWS_BEDROCK_MODEL=anthropic.claude-3-sonnet
# AWS_BEDROCK_REGION=us-east-1

# ======================
# Extraction Settings
# ======================
CONFIDENCE_THRESHOLD=0.8
MAX_EMAIL_SIZE_KB=500
TOKEN_BUDGET_DAILY=50000

# ======================
# Gmail Integration (Phase 2+)
# ======================
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REFRESH_TOKEN=
GMAIL_LABEL=CRM

# ======================
# API Configuration
# ======================
PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# ======================
# Logging
# ======================
LOG_LEVEL=info
